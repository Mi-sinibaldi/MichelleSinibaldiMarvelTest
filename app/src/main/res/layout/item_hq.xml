<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_width_photo_detail"
        android:layout_height="@dimen/size_height_photo_item"
        android:layout_marginStart="@dimen/size_PP"
        android:layout_marginTop="@dimen/size_P"
        android:background="@color/blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewItemHq"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/size_PP"
            android:paddingTop="@dimen/size_PP"
            android:paddingRight="@dimen/size_PP"
            android:paddingBottom="@dimen/size_PP"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/textViewDescHq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spider_man" />

        <TextView
            android:id="@+id/textViewDescHq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_dark"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Homem Aranha" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>